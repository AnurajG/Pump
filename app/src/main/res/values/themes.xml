<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Pump" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/barbie_pink</item>
        <item name="colorPrimaryVariant">@color/barbie_pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/barbie_pink</item>
        <item name="colorSecondaryVariant">@color/barbie_pink_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/pink_bg</item>

        <!-- Default text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Default background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/BarbiePinkButton</item>

    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#2F2F2F</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="hintEnabled">true</item>
        <item name="android:alpha">1.0</item> <!-- Keep text fully visible even when disabled -->
        <item name="boxBackgroundColor">@color/text_input_background_selector</item>
    </style>
    <style name="BarbiePinkButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/barbie_pink</item>
        <item name="rippleColor">@color/barbie_pink_dark</item>
    </style>

    <style name="Widget.EommaPump.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/barbie_pink</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/fluorescent</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/barbie_pink_light</item>
    </style>

    <style name="Widget.EommaPump.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/barbie_pink</item>
        <item name="itemTextColor">@color/barbie_pink</item>
        <item name="backgroundColor">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.ActiveItemTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.InactiveItemTextAppearance</item>
    </style>

    <!-- Text appearance for active bottom navigation item -->
    <style name="BottomNavigationView.ActiveItemTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Text appearance for inactive bottom navigation item -->
    <style name="BottomNavigationView.InactiveItemTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarDayLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CalendarDateNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CalendarDateNumber.Selected">
        <item name="android:background">@drawable/circle_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="CalendarDayContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ProfileMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="ProfileMenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileMenuArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="SettingsMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsMenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="SettingsMenuArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="DropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2F2F2F</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>